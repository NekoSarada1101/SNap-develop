<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="userViewModel"
            type="com.example.snap_develop.viewModel.UserViewModel" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/userInfoConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.UserActivity">

        <Button
            android:id="@+id/profileUpdateButton"
            android:layout_width="94dp"
            android:layout_height="40dp"
            android:text="@string/changeButten"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/followRequestButton" />

        <Button
            android:id="@+id/followRequestButton"
            android:layout_width="94dp"
            android:layout_height="40dp"
            android:text="@string/approvalbutten"
            android:textColor="#000000"
            android:textColorHint="#070707"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/contents_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </FrameLayout>

        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="88dp"
            android:layout_height="88dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:imageBitmap="@{userViewModel.user.icon}" />

        <LinearLayout
            android:id="@+id/followButtonLinerLayout"
            android:layout_width="410dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/messageTextView">

            <Button
                android:id="@+id/followerButton"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:text="@{userViewModel.user.followingCount.toString() + @string/followButtonText}" />

            <Button
                android:id="@+id/followButton"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:text="@{userViewModel.user.followerCount.toString() + @string/followerButtonText}" />
        </LinearLayout>

        <ListView
            android:id="@+id/postList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/followButtonLinerLayout" />

        <TextView
            android:id="@+id/idTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{userViewModel.user.uid}"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="@+id/nameTextView"
            app:layout_constraintStart_toEndOf="@+id/iconImageView"
            app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{userViewModel.user.name}"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/followRequestButton"
            app:layout_constraintStart_toEndOf="@+id/iconImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="@{userViewModel.user.message}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iconImageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
