<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PostActivity">

    <Switch
        android:id="@+id/dangerswitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dangerswitch"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="340dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/picturebutten"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        tools:layout_editor_absoluteX="323dp"
        tools:layout_editor_absoluteY="292dp"
        tools:srcCompat="@android:drawable/ic_menu_add" />

    <EditText
        android:id="@+id/posttextBox"
        android:layout_width="371dp"
        android:layout_height="179dp"
        android:ems="10"
        android:hint="@string/posttextBox"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.127" />

    <Switch
        android:id="@+id/anonymousswitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:text="@string/tokumeiSwitch"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="292dp"
        tools:text="匿名投稿　" />

</androidx.constraintlayout.widget.ConstraintLayout>
